<div class="container-fluid">
  <div class="jumbotron">
    <h2 class="text-center">Welcome to Job Search! The first step to your full stack career.</h2>
  </div>

  <div class="row">
    <form action="/home" method="post">
      <div class="col-md-4">
        <div class="well">
            <div class="form-group">
              <h3>Select your website options:</h3>
              <input type="checkbox" name="website" value="indeed"> Indeed<br>
              <input type="checkbox" name="website" value="meetup"> MeetUp<br>
              <input type="checkbox" name="website" value="craiglist"> CraigList<br>
            </div>

            <div class="form-group">
              <h3>Please input your options:</h3>
              <input name="location" class="form-control" type="text" placeholder="Location: City or Zip Code">
              <input name="keyword" class="form-control" type="text" placeholder="Search keyword, job title or company">
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Get Results</button>
        </div>
      </div>

      <div class="col-md-8">
        <div class="well">
          <h2 class="text-center">Your Jobs:</h2>
        </div>
        <div class="well">
          <h2 class="text-center">Suggested Meetups:</h2>
          <div class="form-group">
          <% @meetups.first(15).each do |meetup| %>
            <% time = Time.at(meetup.time / 1000) %>
            <h4>
              <input class="pin" type="checkbox" name="pinned_meetups" value="<%= meetup.id %>">
              <a href="/meetups/<%= meetup.id %>"><%= meetup.name %></a> <%= time.strftime("%m/%d") %>
            </h4>
          <% end %>
        </div>
        </div>
      </div>
    </form>
  </div>
</div>
